<!DOCTYPE html>
<html>
 
 <% include _head.ejs %> 

  <body>
    <nav class="navbar">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <a class="navbar-brand navbar-left" href="/home">
          <img alt="brand" src="/images/JK_Logo.png">
        </a>

        <button id="popover" name="title" class="btn btn-default navbar-btn navbar-right" rel="popover" data-placement="bottom" data-content="<form class='form-group' id='new-plan'><input type='text' class='form-control list-group-item' name='title' placeholder='Title'></form>">+</button>

