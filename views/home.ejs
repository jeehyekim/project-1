      </div>
    </nav>

    <div class="container" id="currentdate">
      <h2>Friday, October 23, 2015</h2>

      <div class="container" id="user-plans">
      
        <% for(var i = 0; i<plans.length; i++) { %>
  
          <div class="panel" id="<%= plans._id %>">
            <div class="panel-heading">
              <h3><%= plans[i].title %></h3>
            </div>
            
          </div>

        <% } %>

      </div>

    </div>

  </body>

</html>