<!DOCTYPE html>
<html>
 
 <% include _head.ejs %> 

<body>
<div>
  
  <nav class="navbar">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <a class="navbar-brand navbar-left" href="/home">
        <img alt="brand" src="images/JK_Logo.png">
      </a>

      <button type="button" class="btn navbar-btn navbar-right" id="login-button" data-toggle='modal' data-target='#login-modal'>Log in</button>
      <button class="btn navbar-btn navbar-right" type="button" id="signup-button" data-toggle='modal' data-target='#signup-modal'>Sign Up</button>
    </div>
  </nav>

    <div class="header">
      <h1>weekhack</h1>
      <p>themed days to optimize productivity</p>
      <button class="btn navbar-btn" type="button" id="signup-button" data-toggle='modal' data-target='#signup-modal'>Start hacking your week now!</button>
    </div>


    <!-- about content -->
  <div class="about">

    <p class="col-sm-2 col-sm-offset-3">optimize productivity and manage mental energy</p>
    <p class="col-sm-2">free your mind to focus on critical tasks</p>
    <p class="col-sm-2">customize your week and days for your needs</p>

  </div>

    <!-- contact info -->
  <div class="container">

  </div>

  <!-- signup modal -->
    <div class="container">
      <div class="modal fade" tabindex="-1" id="signup-modal" role="dialog">
        <div class="modal-dialog" role='document'>
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Sign Up</h4>
            </div>
            <div class="modal-body">
              <form class="form-group" id="signup">
                <div class="form-group" id="signup-form">
                  <input type="text" class="form-control list-group-item" id="fullname" placeholder="Full Name">
                  <input type="text" class="form-control" id="username" placeholder="Username">
                  <input type="email" class="form-control" id="email" placeholder="Email" required>
                  <input type="password" class="form-control" id="password" placeholder="Password" required>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary pull-right" id="signup-submit">Sign Up</button>
                    <a class="btn" href="#" data-toggle="modal" data-target="#login-modal" id="login-link">Login</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>


    <!-- login modal -->
    <div class="modal fade" tabindex="-1" id="login-modal" role="dialog">
      <div class="modal-dialog" role='document'>
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Log in</h4>
          </div>
          <div class="modal-body">
            <form class="form-group" id="login">
              <div class="form-group" id="login-form">
                <input type="email" class="form-control" id="email" placeholder="Email" required>
                <input type="password" class="form-control" id="password" placeholder="Password" required>
              </div>
              <div class="modal-footer">
                  <button type="submit" class="btn btn-primary pull-right">Log in</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>


